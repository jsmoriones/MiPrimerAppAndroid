<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/game1"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Game1">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textoJuego1"
        android:textSize="35sp"
        android:textColor="@color/bluegray_900"
        android:fontFamily="sans-serif-black"
        android:layout_marginTop="10sp"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/seleccionar_opcion"
        android:textSize="25sp"
        android:textColor="@color/bluegray_900"
        android:fontFamily="sans-serif-medium"
        android:layout_gravity="center_horizontal"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"

        android:gravity="center|center_vertical"
        android:layout_marginHorizontal="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/prod_sound"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:layout_marginEnd="15dp"
            android:textColor="@color/bluegray_900"
            android:fontFamily="sans-serif-black"
            android:layout_gravity="center_horizontal"/>
        <ImageView
            android:id="@+id/imgSonidoJuego1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:src="@drawable/sonido"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/cntGame1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="50dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <ImageView
                android:id="@+id/lavadomanos"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginRight="20dp"
                android:onClick="clickHandler"
                android:src="@drawable/lavadomanos"/>

            <ImageView
                android:id="@+id/zapato"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:onClick="clickHandler"
                android:src="@drawable/zapato"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp">
            <ImageView
                android:id="@+id/car"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:gravity="start"
                android:layout_marginRight="20dp"
                android:onClick="clickHandler"
                android:src="@drawable/coche"/>
            <ImageView
                android:id="@+id/sonrisa"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:layout_gravity="end"
                android:layout_marginLeft="20dp"
                android:onClick="clickHandler"
                android:src="@drawable/sonrisa"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnNextGame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/material_dynamic_neutral20"
            android:textSize="25sp"
            android:layout_marginTop="40dp"
            android:text="@string/continuar" />
    </LinearLayout>


</LinearLayout>